{% extends 'layout.twig' %}
{% block body %}

    <h1 style = "margin-top: 30px;">Checks</h1>
    <button type="button" class="btn btn-primary" style="margin-top: 30px; margin-bottom: 30px">Add check</button>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Check number</th>
            <th scope="col">Employee Id</th>
            <th scope="col">Card number</th>
            <th scope="col">Print date</th>
            <th scope="col">Total sum</th>
            <th scope="col">Vat</th>
            <th scope="col"> </th>
        </tr>
        </thead>
        <tbody>
        {% for check in checks %}
            <tr>
                {% for key in check %}
                    <td>{{ key }} </td>
                {% endfor %}
                <td><button type="button" class="btn btn-outline-success btn-sm">Edit</button>
                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="">Delete</button> </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}