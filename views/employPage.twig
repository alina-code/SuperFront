{% extends 'layout.twig' %}

{% block body %}

    <h1 style = "margin-top: 30px;">Employees</h1>
    <button type="button" class="btn btn-primary" style="margin-top: 30px; margin-bottom: 30px">Add employee</button>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Employee id</th>
            <th scope="col">Surname</th>
            <th scope="col">Name</th>
            <th scope="col">Patronymic</th>
            <th scope="col">Role</th>
            <th scope="col">Salary</th>
            <th scope="col">Date of birth</th>
            <th scope="col">Date of start</th>
            <th scope="col">Phone number</th>
            <th scope="col">City</th>
            <th scope="col">Street</th>
            <th scope="col">Zip code</th>
            <th scope="col"> </th>
        </tr>
        </thead>
        <tbody>
        {% for employee in employees %}
            <tr>
                {% for key in employee %}
                    <td>{{ key }} </td>
                {% endfor %}
                <td><button type="button" class="btn btn-outline-success btn-sm">Edit</button>
                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="">Delete</button> </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}