{% extends 'layout.twig' %}
{% block body %}

    <h1 style = "margin-top: 30px;">Products</h1>
    <button type="button" class="btn btn-primary" style="margin-top: 30px; margin-bottom: 30px">Add product</button>
    <table class="table table-hover">
        <thead>
        <tr>

            <th scope="col">Product id</th>
            <th scope="col">Category Id</th>
            <th scope="col">Product Name</th>
            <th scope="col">Description</th>
            <th scope="col"> </th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>

                {% for key in product %}
                    <td>{{ key }} </td>
                {% endfor %}
                <td><button type="button" class="btn btn-outline-success btn-sm">Edit</button>
                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="">Delete</button> </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}